{
    "name": "mzarnecki/php-rag",
    "description": "A Retrieval Augmented Generation application that combines the power of Large Language Models with document retrieval capabilities.",
    "keywords": ["php", "openai", "GPT-5", "vectorstore", "Claude", "semantic search", "LLM", "ollama", "anthropic", "mistral"],
    "license": "MIT",
    "authors": [
        {
            "name": "Michał Żarnecki"
        }
    ],
    "require": {
        "php": ">=8.1.0",
        "openai-php/client": "^0.7.4",
        "symfony/http-client": "^6.4",
        "nyholm/psr7": "^1.8",
        "rajentrivedi/tokenizer-x": "^1.0",
        "league/pipeline": "^1.0",
        "laravel/prompts": "^0.1.23",
        "minicli/minicli": "^4.2",
        "minicli/command-help": "^1.0",
        "guzzlehttp/guzzle": "^7.8",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "laravel/pint": "v1.15.3",
        "phpstan/phpstan": "1.10.55",
        "rector/rector": "^0.16.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "service\\": "src/service/",
            "command\\": "src/command/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "lint": "pint -v",
        "refactor": "rector --debug",
        "test:lint": "pint --test -v",
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse --ansi --memory-limit 4G",
        "test:unit": "phpunit",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:types",
            "@test:unit"
        ]
    }
}
